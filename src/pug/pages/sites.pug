html
  head
    title Choose your Nudge sites
    link(rel="stylesheet" href="../../css/pages/main.css")
    link(href='https://fonts.googleapis.com/css?family=Roboto:400,500,700,900&display=swap' rel='stylesheet')
    meta(charset="UTF-8")
  body
    div.options-container
      div
        div.options-header
          div.options-logo
      span.options-sub-header Your Nudge sites
      div
        ul.text-input
          li
            input#addDomain(type='text' placeholder='Add a site here, or remove a site by clicking on it below') 
      div
        span.options-guidance-text  (In format 
          span.options-guidance-text-highlight site.com
          | , 
          span.options-guidance-text-highlight  partof.site.com
          |  or 
          span.options-guidance-text-highlight site.com/page
          | )
      ul.tags#domainList
      span.options-sub-header ðŸŒ¼ Nudge whitelisted sites
      div
        ul.text-input
          li
            input#addWhitelist(type='text' placeholder='Add a site here, or remove a site by clicking on it below') 
      div
        span.options-guidance-text  (In format 
          span.options-guidance-text-highlight site.com
          | , 
          span.options-guidance-text-highlight  partof.site.com
          |  or 
          span.options-guidance-text-highlight site.com/page
          | . You can use * to represent any part of a URL, e.g. 
          span.options-guidance-text-highlight site.com/*/page
          |  will match 
          span.options-guidance-text-highlight site.com/this/page
          |  and 
          span.options-guidance-text-highlight site.com/that/page
          | )
      ul.tags#whiteList
    div.other-one
  script(src="../../config.js")
  script(src="../../js/background/storage.js")
  script(src="../../js/helpers.js")
  script(src="../../js/vars/vars.js")
