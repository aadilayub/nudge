{
  "manifest_version": 2,
  "name": "Nudge",
  "commands": {
    "switch_off": {
      "suggested_key": {
        "default": "Ctrl+0"
      },
      "description": "offshortcut"
    }
  },
  "permissions": [
    "idle",
    "identity",
    "activeTab",
    "tabs",
    "webNavigation",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "description": "Escape addictive sites with nudges that tell you when you're getting sucked in.",
  "icons": {
    "128": "resources/images/128.png",
    "16": "resources/images/16.png",
    "48": "resources/images/48.png"
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    "resources/*"
  ],
  "version": "1.0.10",
  "background": {
    "scripts": ["config.js", "lib/jquery/jquery-3.1.0.min.js", "resources/js/helpers.js", "resources/js/background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["config.js", "lib/jquery/jquery-3.1.0.min.js", "resources/js/helpers.js", "resources/js/images.js", "resources/js/controller.js"],
    "css": ["resources/css/nudge.css", "resources/css/switch.css","resources/css/debugger.css"],
    "exclude_globs": [
      "*business.facebook.com*"
    ],
    "run_at": "document_start"
  }, {
    "matches": ["http://www.facebook.com/", "https://www.facebook.com/"],
    "js": ["resources/js/fbunfollow.js"],
    "css": ["resources/css/fbunfollow.css"],
    "exclude_globs": [
      "*business.facebook.com*"
    ],
    "run_at": "document_start"
  }]
}