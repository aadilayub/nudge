{
  "manifest_version": 3,
  "name": "Nudge test",
  "commands": {
    "tester": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "tester"
    }
  },
  "permissions": [
    "idle",
    "activeTab",
    "tabs",
    "webNavigation",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "history",
    "notifications",
    "http://*/*",
    "https://*/*",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "description": "Escape addictive sites with nudges that tell you when you're getting sucked in.",
  "icons": {
    "128": "resources/images/128.png",
    "16": "resources/images/16.png",
    "48": "resources/images/48.png"
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    "resources/images/blank.gif",
    "resources/images/128.png",
    "resources/images/16alpha.png",
    "resources/images/close.png",
    "resources/images/closehover.png",
    "resources/images/visit.png",
    "resources/images/scroll.png",
    "resources/images/time.png",
    "resources/images/compulsive.png",
    "resources/images/cogsmall.png",
    "resources/images/cogsmallhover.png",
    "resources/images/coglarge.png",
    "resources/images/coglargehover.png",
    "resources/images/1nothing.png",
    "resources/images/5nothings.png",
    "resources/images/whatisanothing.html",
    "resources/fonts/opensans.woff2",
    "resources/retina-images/close@2x.png",
    "resources/retina-images/closehover@2x.png",
    "resources/retina-images/coglarge@2x.png",
    "resources/retina-images/coglargehover@2x.png",
    "resources/retina-images/cogsmall@2x.png",
    "resources/retina-images/cogsmallhover@2x.png",
    "resources/retina-images/compulsive@2x.png",
    "resources/retina-images/scroll@2x.png",
    "resources/retina-images/time@2x.png",
    "resources/retina-images/visit@2x.png"
  ],
  "version": "1.0.8",
  "background": {
    "scripts": ["config.js", "lib/jquery/jquery-3.1.0.min.js", "resources/js/background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["lib/jquery/jquery-3.1.0.min.js", "resources/js/images.js", "resources/js/player.js"],
    "css": ["resources/css/nudge.css"],
    "exclude_globs": [
      "*business.facebook.com*"
    ],
    "run_at": "document_start"
  }]
}
