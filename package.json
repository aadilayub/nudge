{
  "name": "nudge",
  "version": "1.0.0",
  "sasslintConfig": ".vscode/.sass-lintrc",
  "description": "Nudge app",
  "main": "node.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build:pug": "pug -w src/pug -o extension/html",
    "build:sass-pages": "node-sass --importer node_modules/node-sass-json-importer/dist/cli.js --watch src/scss/pages -o extension/css/pages --sourcemap=none -r sass-json-vars",
    "build:sass-injected": "node-sass --importer node_modules/node-sass-json-importer/dist/cli.js --watch src/scss/injected -o src/css/injected --sourcemap=none -r sass-json-vars",
    "build:important-injected": "postcss --use postcss-safe-important -d extension/css/injected src/css/injected/*  --w --no-map",
    "dev": "npm-run-all -p build:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lgwb89/nudge.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lgwb89/nudge/issues"
  },
  "homepage": "https://github.com/lgwb89/nudge#readme",
  "dependencies": {
    "clx": "^1.0.0",
    "cpx": "^1.5.0",
    "moment": "^2.20.1",
    "node-sass": "^4.13.0",
    "node-sass-json-importer": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.16",
    "postcss-cli": "^6.1.2",
    "postcss-safe-important": "^1.1.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sharp": "^0.23.4",
    "zip-folder": "^1.0.0"
  },
  "devDependencies": {
    "chrome-webstore-upload": "^0.2.2"
  }
}
