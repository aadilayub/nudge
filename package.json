{
  "name": "nudge",
  "version": "1.0.0",
  "sasslintConfig": ".vscode/.sass-lintrc",
  "description": "Nudge app",
  "main": "node.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build:pug": "pug -w src/pug -o extension/html",
    "build:sass": "sass --watch src/scss:extension/css --sourcemap=none",
    "build:circle": "postcss --use postcss-safe-important -r extension/css/pages/circle.css --w --no-map",
    "build:facebook": "postcss --use postcss-safe-important -r extension/css/pages/facebook.css --w --no-map",
    "build:grey": "postcss --use postcss-safe-important -r extension/css/pages/grey.css --w --no-map",
    "build:notifications": "postcss --use postcss-safe-important -r extension/css/pages/notifications.css --w --no-map",
    "dev": "npm-run-all -p build:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lgwb89/nudge.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lgwb89/nudge/issues"
  },
  "homepage": "https://github.com/lgwb89/nudge#readme",
  "dependencies": {
    "clx": "^1.0.0",
    "cpx": "^1.5.0",
    "moment": "^2.20.1",
    "npm-run-all": "^4.1.2",
    "postcss-safe-important": "^1.1.0"
  }
}
