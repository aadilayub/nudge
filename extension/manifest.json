{
  "manifest_version": 2,
  "name": "Nudge",
  "commands": {
    "switch_off": {
      "suggested_key": {
        "default": "Ctrl+0"
      },
      "description": "offshortcut"
    }
  },
  "permissions": [
    "idle",
    "identity",
    "activeTab",
    "tabs",
    "webNavigation",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "key":
    "",
  "description":
    "Escape addictive sites with nudges that tell you when you're getting sucked in.",
  "icons": {
    "128": "resources/images/128.png",
    "16": "resources/images/16.png",
    "48": "resources/images/48.png"
  },
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "options_page": "html/options.html",
  "web_accessible_resources": ["resources/*", "html/*", "css/*"],
  "version": "1.0.10",
  "background": {
    "scripts": [
      "config.js",
      "resources/js/helpers.js",
      "resources/js/background/storage.js",
      "resources/js/background/logger.js",
      "resources/js/background/events.js",
      "resources/js/background/messager.js",
      "resources/js/background/nudger-recorder.js",
      "resources/js/background/settings.js",
      "resources/js/background/switch-on-off.js",
      "resources/js/vars/vars.js",
      "resources/js/background/background.js",
      "resources/js/background/tests.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "config.js",
        "resources/js/helpers.js",
        "resources/js/utils/images.js",
        "resources/js/vars/divs.js",
        "resources/js/content/controller.js",
        "resources/js/content/nudger.js"
      ],
      "css": [
        "resources/css/nudge.css",
        "resources/css/switch.css",
        "resources/css/debugger.css"
      ],
      "exclude_globs": ["*business.facebook.com*"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://www.facebook.com/", "https://www.facebook.com/"],
      "js": [
        "resources/js/facebook/unfollow.js",
        "resources/js/facebook/ad.js"
      ],
      "css": ["resources/css/fbunfollow.css", "resources/css/fbtweaks.css"],
      "exclude_globs": ["*business.facebook.com*"],
      "run_at": "document_start"
    }
  ]
}
